    <!-- JavaScript -->
    <script>
        document.getElementById('weatherForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const city = document.getElementById('cityInput').value;
            const date = document.getElementById('dateInput').value;

            const apiKey = 'ac07e2778b01748b65e42a8290181978'; // Ganti dengan API Key OpenWeatherMap
           const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    const weatherResult = document.getElementById('weatherResult');
                    const weatherDate = document.getElementById('weatherDate');
                    const weatherDescription = document.getElementById('weatherDescription');
                    const weatherTemp = document.getElementById('weatherTemp');
                    const weatherWind = document.getElementById('weatherWind');

                    weatherDate.textContent = date;
                    weatherDescription.textContent = data.weather[0].description;
                    weatherTemp.textContent = data.main.temp;
                    weatherWind.textContent = data.wind.speed;

                    weatherResult.style.display = 'block'; // Menampilkan hasil cuaca
                })
                .catch(error => {
                    alert('Gagal mengambil data cuaca. Pastikan kota yang dimasukkan benar.');
                });
        });
    </script>


